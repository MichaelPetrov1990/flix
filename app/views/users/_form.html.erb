<%= render "shared/errors", object: @user %>

<%= form_with(model: @user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password_ %>
  <%= f.password_field :password %>

  <% if user.new_record? %>
  <%= f.submit "Create Account" %>
  <% else %>
    <%= f.submit "Update Account" %>
  <% end %>
  
<% end %>